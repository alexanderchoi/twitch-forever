{
  "name": "twitch-forever",
  "version": "1.0",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_title": "Click to find new stream"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["tabs"],
  "icons": {
    "128": "icon128.png"
  }
}
